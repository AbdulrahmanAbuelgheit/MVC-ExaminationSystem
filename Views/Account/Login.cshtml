@using static ExaminationSystemMVC.DTOs.AuthDTO.Auth
@model LoginUserVM

@{
    ViewData["Title"] = "Login to Examination System";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <div class="login-banner">
            <div class="banner-content">
                <h1>School System</h1>
                <p>Learn. Achieve. Excel.</p>
                <div class="education-icons">
                    <i class="bi bi-book"></i>
                    <i class="bi bi-mortarboard-fill"></i>
                    <i class="bi bi-award"></i>
                    <i class="bi bi-graph-up"></i>
                </div>
            </div>
        </div>

        <div class="login-card">
            <div class="login-header">
                <div class="school-logo">
                    <i class="bi bi-buildings"></i>
                </div>
                <h2>Welcome Back</h2>
                <p>Sign in to access your academic portal</p>
            </div>

            <form asp-action="Login" method="post" class="login-form">
                <div class="form-group animate-fade-in" style="--delay: 0.2s">
                    <label asp-for="Email">Academic Email</label>
                    <div class="input-with-icon">
                        <i class="bi bi-envelope"></i>
                        <input asp-for="Email" class="form-input" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>

                <div class="form-group animate-fade-in" style="--delay: 0.3s">
                    <label asp-for="Password">Password</label>
                    <div class="input-with-icon">
                        <i class="bi bi-lock"></i>
                        <input asp-for="Password" type="password" class="form-input password-field" placeholder="Enter your password" />
                        <i class="bi bi-eye password-toggle" onclick="togglePasswordVisibility()"></i>
                    </div>
                    <span asp-validation-for="Password" class="validation-error"></span>
                </div>

                <div class="text-danger mb-4">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="login-button animate-fade-in" style="--delay: 0.5s">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Sign In
                </button>
            </form>
        </div>
    </div>

    <style>
        :root {
            --primary-color: #3563E9; /* Educational blue */
            --primary-light: #5B8DEF;
            --secondary-color: #00AF91; /* Success teal */
            --accent-color: #FF6B6B; /* Attention/error red */
            --dark-color: #2B3A55; /* Dark navy */
            --light-color: #f8f9fa;
            --bg-color: #EEF2FF; /* Soft background */
            --border-radius: 10px;
            --box-shadow: 0 10px 25px rgba(43, 58, 85, 0.1);
            --transition: all 0.3s ease;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--bg-color);
            color: var(--dark-color);
            line-height: 1.6;
            min-height: 100vh;
        }

        .login-container {
            display: flex;
            min-height: 100vh;
        }

        .login-banner {
            display: flex;
            align-items: center;
            justify-content: center;
            flex: 1;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 2rem;
            position: relative;
            overflow: hidden;
        }

        .banner-content {
            position: relative;
            z-index: 1;
            text-align: center;
        }

            .banner-content h1 {
                font-size: 2.8rem;
                font-weight: 700;
                margin-bottom: 1rem;
                text-shadow: 0 2px 10px rgba(0,0,0,0.2);
            }

            .banner-content p {
                font-size: 1.5rem;
                opacity: 0.9;
                margin-bottom: 2rem;
            }

        .education-icons {
            display: flex;
            justify-content: center;
            gap: 2rem;
            font-size: 3rem;
            margin-top: 2rem;
        }

            .education-icons i {
                opacity: 0.8;
                transition: var(--transition);
            }

                .education-icons i:hover {
                    opacity: 1;
                    transform: translateY(-5px);
                }

        .login-card {
            flex: 1;
            background: white;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            max-width: 550px;
            box-shadow: -5px 0 30px rgba(0,0,0,0.05);
        }

        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .school-logo {
            font-size: 3rem;
            color: var(--primary-color);
            margin-bottom: 1.5rem;
        }

        .login-header h2 {
            color: var(--dark-color);
            font-size: 2rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .login-header p {
            color: #666;
            font-size: 1rem;
        }

        .login-form {
            margin-top: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: 500;
                color: var(--dark-color);
                font-size: 0.9rem;
            }

        .input-with-icon {
            position: relative;
        }

            .input-with-icon i:not(.password-toggle) {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #999;
            }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            cursor: pointer;
            transition: var(--transition);
        }

            .password-toggle:hover {
                color: var(--primary-color);
            }

        .form-input {
            width: 100%;
            padding: 0.8rem 1rem 0.8rem 2.5rem;
            border: 1px solid #ddd;
            border-radius: var(--border-radius);
            font-size: 0.95rem;
            transition: var(--transition);
            background-color: #f9fafc;
        }

        .password-field {
            padding-right: 2.5rem;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(53, 99, 233, 0.1);
            background-color: white;
        }

        .validation-error {
            display: block;
            color: var(--accent-color);
            font-size: 0.8rem;
            margin-top: 0.3rem;
            height: 1rem;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        .login-button {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 1rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: var(--border-radius);
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            gap: 0.5rem;
            margin-top: 3rem;
        }

            .login-button:hover {
                background-color: var(--primary-light);
                transform: translateY(-2px);
            }

        /* Animations */
        @@keyframes card-enter {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            opacity: 0;
            animation: fadeIn 0.5s ease-out forwards;
            animation-delay: var(--delay);
        }

        @@keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        /* Responsive adjustments */
        @@media (max-width: 992px) {
            .login-container {
                flex-direction: column;
            }

            .login-banner {
                padding: 2rem;
                min-height: 250px;
            }

            .login-card {
                max-width: 100%;
                padding: 2rem;
            }
        }

        @@media (max-width: 768px) {
            .banner-content h1 {
                font-size: 2rem;
            }

            .education-icons {
                font-size: 2rem;
                gap: 1rem;
            }
        }
    </style>

    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.querySelector('.password-field');
            const icon = document.querySelector('.password-toggle');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>

    @section Scripts {
        @{
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        }
    }
</body>
</html>
