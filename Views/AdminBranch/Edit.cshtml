@model UpdateBranchVM

@{
    ViewData["Title"] = "Edit Branch";
    Layout = "_AdminLayout";
}

<div class="container mt-5" style="max-width: 700px;">
    <div class="mb-4 text-center">
        <h2 class="fw-bold" style="color: var(--primary-color);">Edit Branch</h2>
        <hr style="width: 80px; border-top: 3px solid var(--primary-light); margin: 0 auto;" />
    </div>

    <div class="card shadow-sm border-0" style="border-radius: var(--border-radius); box-shadow: var(--box-shadow);">
        <div class="card-body p-4">
            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="BranchID" />
                <partial name="_BranchForm" />
            </form>
        </div>
    </div>
</div>
