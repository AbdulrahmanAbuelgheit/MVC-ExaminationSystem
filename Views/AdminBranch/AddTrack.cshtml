@model AddTrackToBranchDTO

@{
    ViewData["Title"] = "Add Track to Branch";
}

<div class="container mt-4">
    <h3>Add Track to Branch</h3>

    <form asp-action="AddTrack" method="post" class="mt-3">
        <input type="hidden" asp-for="BranchID" />

        <div class="mb-3">
            <label asp-for="TrackID" class="form-label">Track</label>
            <select asp-for="TrackID" asp-items="Model.AvailableTracks" class="form-select">
                <option value="">Choose Track</option>
            </select>
            <span asp-validation-for="TrackID" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Track</button>
        <a asp-action="Details" asp-route-id="@Model.BranchID" class="btn btn-secondary ms-2">Back</a>
    </form>
</div>
