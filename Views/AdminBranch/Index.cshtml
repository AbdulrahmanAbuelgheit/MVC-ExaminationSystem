@model IEnumerable<DisplayBranchDTO>
@{
    ViewData["Title"] = "Branches";
    Layout = "_AdminLayout";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">Available Branches</h2>
        <a asp-action="Create" class="btn btn-outline-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> Add Branch
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
                <thead class="table-primary text-center">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Governate</th>
                <th>City</th>
                <th>Tel</th>
                <th>Manager</th>
                <th></th>
            </tr>
        </thead>
            <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                        <td class="fw-semibold">@item.BranchID</td>
                            <td>@item.BranchName</td>
                    <td>@item.Governate</td>
                    <td>@item.City</td>
                    <td>@item.Tel</td>
                    <td>@item.ManagerName</td>
                    <td>
                            <a asp-action="Details" asp-route-id="@item.BranchID" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.BranchID" class="btn btn-sm btn-outline-warning me-1">
                                    <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.BranchID"
                               onclick="return confirm('Are you sure you want to delete this branch?')"
                               class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt"></i>
                            </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
else
{
    <div class="alert alert-info text-center shadow-sm mt-4">
        No tracks found. Click <strong>Add Branch</strong> to get started.
    </div>
}
</div>