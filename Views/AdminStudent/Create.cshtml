@model CreateStudentVM
@{
    ViewData["Title"] = "Add Student";
    Layout = "_AdminLayout";
}

<div class="container mt-5" style="max-width: 700px;">
    <div class="mb-4 text-center">
        <h2 class="fw-bold" style="color: var(--primary-color);">Add New Student</h2>
        <hr style="width: 80px; border-top: 3px solid var(--primary-light); margin: 0 auto;" />
    </div>


    <div class="card shadow-sm border-0" style="border-radius: var(--border-radius); box-shadow: var(--box-shadow);">
        <div class="card-body p-4">
            <form asp-action="Create" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="StdID" class="form-label">Name</label>
                    <select asp-for="StdID" asp-items="ViewBag.users" class="form-select"></select>
                    <span asp-validation-for="StdID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IntakeYear" class="form-label">Intake Year</label>
                    <input asp-for="IntakeYear" class="form-control" placeholder="Year"/>
                    <span asp-validation-for="IntakeYear" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="BranchID" class="form-label">Branch</label>
                    <select asp-for="BranchID" asp-items="ViewBag.Branches" class="form-select">
				        <option value="">Select Branch</option>
                    </select>
                    <span asp-validation-for="BranchID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrackID" class="form-label">Track</label>
                    <select asp-for="TrackID" asp-items="ViewBag.Tracks" class="form-select">
				        <option value="">Select Track</option>
			
                    </select>
                    <span asp-validation-for="TrackID" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn"
                            style="background-color: var(--primary-color); color: white; border-radius: var(--border-radius);">
                        Create
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2"
                       style="border-radius: var(--border-radius);">Cancel</a>
                </div>
    </form>
</div>
