@model ExaminationSystemMVC.Models.Student

@{
    ViewData["Title"] = "Student Details";
    Layout = "_AdminLayout";
}

<div class="container my-5" style="max-width: 400px;">
    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color: var(--primary-color);">Student Details</h2>
        <hr class="mx-auto" style="width: 80px; border-top: 3px solid var(--primary-light);" />
    </div>

    <div class="card shadow-sm border-0" style="border-radius: var(--border-radius); box-shadow: var(--box-shadow);">
        <div class="card-body p-4">
            <h4 class="mb-4" style="color: var(--primary-color); font-weight: 600;">
                @Model.Std.FirstName @Model.Std.LastName
            </h4>

            <ul class="list-unstyled lh-lg mb-4">
                <li><strong>Email:</strong> @Model.Std.Email</li>
                <li><strong>Intake Year:</strong> @Model.IntakeYear</li>
                <li>
                    <strong>Active:</strong>
                    <span class="badge @(Model.IsActive == "T" ? "bg-success" : "bg-danger")">
                        @(Model.IsActive == "T" ? "Yes" : "No")
                    </span>
                </li>
                <li><strong>Branch:</strong> @Model.Branch.BranchName</li>
                <li><strong>Track:</strong> @Model.Track.TrackName</li>
            </ul>

            <a asp-action="Index" class="btn"
               style="background-color: var(--primary-color); color: white; border-radius: var(--border-radius);">
                ← Back to List
            </a>
        </div>
    </div>
</div>
