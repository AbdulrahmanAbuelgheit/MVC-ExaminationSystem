@using ExaminationSystemMVC.DTOs.UserDTO;
@model List<DisplayUserVM>

@{
    ViewData["Title"] = "All Users";
    Layout = "_AdminLayout";
}

<h2>All Users</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
			<th>Last Name</th>
            <th>Email</th>
            <th>Birthdate</th>
            <th>Street</th>
			<th>Governate</th>
			<th>City</th>
			<th>Role</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
					<td>@user.Birthdate.ToString("yyyy-MM-dd")</td>
					<td>@user.Street</td>
                    <td>@user.Governate</td>
                    <td>@user.City</td>
					<td>@user.Role</td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10">No users found.</td>
            </tr>
        }
    </tbody>
</table>
