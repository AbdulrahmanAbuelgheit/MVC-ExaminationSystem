@model DisplayTrackVM
@{
    ViewData["Title"] = "Track Details";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="fw-bold text-primary">@Model.TrackName - Details</h2>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Tracks
                    </a>
                </div>
            </div>
        </div>
    </div>
    </div>

    <div class="row">
        <!-- Track Info Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Track Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Duration:</dt>
                        <dd class="col-sm-7">@Model.Duration weeks</dd>

                        <dt class="col-sm-5">Capacity:</dt>
                        <dd class="col-sm-7">@Model.Capacity</dd>

                        <dt class="col-sm-5">Supervisor:</dt>
                        <dd class="col-sm-7">
                            @if (!string.IsNullOrEmpty(Model.SupervisorName))
                            {
                                <span>@Model.SupervisorName</span>
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </dd>
                    </dl>
                    <div class="d-grid gap-2">
                        <a asp-action="EditTrack" asp-route-id="@Model.TrackID" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Track
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="d-grid gap-2 mb-3">
                        <a asp-action="AddCourse" asp-route-id="@Model.TrackID" class="btn btn-success">
                            <i class="fas fa-plus"></i> Add Course
                        </a>
                    </div>
                    <div class="d-grid gap-2 mb-3">
                        <a asp-action="AddInstructor" asp-route-id="@Model.TrackID" class="btn btn-info">
                            <i class="fas fa-plus"></i> Add Instructor
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Assign Existing Student Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Assign Existing Student</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AssignStudent" method="post">
                        <input type="hidden" name="trackId" value="@Model.TrackID" />
                        <div class="mb-3">
                            <label class="form-label">Select Student</label>
                            <select name="studentId" class="form-select" required>
                                <option value="">-- Select Student --</option>
                                @foreach (var student in ViewBag.AvailableStudents)
                                {
                                    <option value="@student.StdID">@student.Name (@student.Email)</option>
                                }
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-secondary">
                                <i class="fas fa-user-plus"></i> Assign Student
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Students (@Model.Students.Count)</h5>
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.TrackID" asp-route-sortOrder="asc"
                           class="btn btn-sm btn-outline-light @(ViewBag.SortOrder == "asc" ? "active" : "")">
                            <i class="fas fa-sort-amount-up"></i> Asc
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.TrackID" asp-route-sortOrder="desc"
                           class="btn btn-sm btn-outline-light @(ViewBag.SortOrder == "desc" ? "active" : "")">
                            <i class="fas fa-sort-amount-down"></i> Desc
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Students.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Intake Year</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student.Name</td>
                                            <td>@student.Email</td>
                                            <td>@student.IntakeYear</td>
                                            <td>
                                                <span class="badge @(student.IsActive == "Active" ? "bg-success" : "bg-secondary")">
                                                    @student.IsActive
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                <a asp-controller="ManagerTrack" asp-action="ViewStudent" asp-route-id="@student.StdID"
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                <a asp-controller="ManagerTrack" asp-action="EditStudent" asp-route-id="@student.StdID"
                                                       class="btn btn-sm btn-outline-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                <form asp-controller="ManagerTrack" asp-action="DeleteStudent" asp-route-id="@student.StdID"
                                                          method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                                onclick="return confirm('Are you sure you want to remove this student?')">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">No students in this track</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Courses and Instructors Row -->
    <div class="row">
        <!-- Courses Section -->
        <!-- Courses Section -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Courses (@Model.Courses.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Courses.Any())
                    {
                        <div class="list-group">
                            @foreach (var course in Model.Courses)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@course.CrsName</h6>
                                        <div>
                                            <a asp-action="CourseDetails" asp-route-id="@course.CrsID"
                                               class="btn btn-sm btn-outline-primary me-2">
                                                <i class="fas fa-eye"></i> Details
                                            </a>
                                        <a asp-action="AssignInstructorToCourse" asp-route-courseId="@course.CrsID"
                                               class="btn btn-sm btn-outline-secondary me-2">
                                                <i class="fas fa-user-plus"></i> Assign Instructor
                                            </a>
                                        </div>
                                    </div>
                                    <form asp-action="RemoveCourse" method="post">
                                        <input type="hidden" name="trackId" value="@Model.TrackID" />
                                        <input type="hidden" name="courseId" value="@course.CrsID" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Remove this course from track?')">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">No courses assigned</div>
                    }
                </div>
            </div>
        </div>
        <!-- Instructors Section -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Instructors (@Model.Instructors.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Instructors.Any())
                    {
                        <div class="list-group">
                            @foreach (var instructor in Model.Instructors)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@instructor.InsName</h6>
                                            <small class="text-muted">@instructor.Email</small>
                                        </div>
                                        <div class="btn-group" role="group">
                                            @if (Model.SupervisorID == instructor.InsID)
                                            {
                                                <span class="badge bg-success me-2">Supervisor</span>
                                            }
                                            else
                                            {
                                                <form asp-action="MakeInstructorSupervisor" method="post" class="d-inline me-2">
                                                    <input type="hidden" name="trackId" value="@Model.TrackID" />
                                                    <input type="hidden" name="insId" value="@instructor.InsID" />
                                                    <button type="submit" class="btn btn-sm btn-outline-info" title="Make Supervisor">
                                                        <i class="fas fa-user-tie"></i>
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="RemoveInstructor" method="post" class="d-inline">
                                                <input type="hidden" name="trackId" value="@Model.TrackID" />
                                                <input type="hidden" name="insId" value="@instructor.InsID" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        title="Remove Instructor"
                                                        onclick="return confirm('Are you sure you want to remove this instructor?')">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">No instructors assigned</div>
                    }
                </div>
            </div>
        </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
            border: none;
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .list-group-item {
            border-left: none;
            border-right: none;
        }

            .list-group-item:first-child {
                border-top: none;
            }

            .list-group-item:last-child {
                border-bottom: none;
            }
    </style>
}