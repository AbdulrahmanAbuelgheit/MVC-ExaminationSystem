@model ExaminationSystemMVC.DTOs.AdminDTOs.TrackDTOs.EditTrackDTO

@{
    ViewData["Title"] = "Edit Track";
    Layout = "_AdminLayout";
}

<div class="container mt-5" style="max-width: 700px;">
    <div class="mb-4 text-center">
        <h2 class="fw-bold" style="color: var(--primary-color);">Edit Track</h2>
        <hr style="width: 80px; border-top: 3px solid var(--primary-light); margin: 0 auto;" />
    </div>

    <div class="card shadow-sm border-0" style="border-radius: var(--border-radius); box-shadow: var(--box-shadow);">
        <div class="card-body p-4">
            <form asp-action="EditTrack" method="post" novalidate>
                <input type="hidden" asp-for="TrackID" />

            <div class="mb-3">
                <label asp-for="TrackName" class="form-label">Track Name</label>
                <input asp-for="TrackName" class="form-control" />
                <span asp-validation-for="TrackName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duration" class="form-label">Duration</label>
                <input asp-for="Duration" class="form-control" type="number" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Capacity" class="form-label">Capacity</label>
                <input asp-for="Capacity" class="form-control" type="number" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                    <button type="submit" class="btn"
                            style="background-color: var(--primary-color); color: white; border-radius: var(--border-radius);">
                        Update
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2"
                       style="border-radius: var(--border-radius);">Cancel</a>
            </div>
        </form>
    </div>
</div>
