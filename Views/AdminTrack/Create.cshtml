@model CreateTrackVM

@{
    ViewData["Title"] = "Create Track";
    Layout = "_AdminLayout";
}

<div class="container mt-5" style="max-width: 700px;">
    <div class="mb-4 text-center">
        <h2 class="fw-bold" style="color: var(--primary-color);">Create New Track</h2>
        <hr style="width: 80px; border-top: 3px solid var(--primary-light); margin: 0 auto;" />
    </div>

    <div class="card shadow-sm border-0" style="border-radius: var(--border-radius); box-shadow: var(--box-shadow);">
        <div class="card-body p-4">
            <form asp-action="Create" method="post" novalidate>

                <!-- Track Name -->
                <div class="mb-3">
                    <label asp-for="TrackName" class="form-label">Track Name</label>
                    <input asp-for="TrackName" class="form-control" />
                    <span asp-validation-for="TrackName" class="text-danger small"></span>
                </div>

                <!-- Duration -->
                <div class="mb-3">
                    <label asp-for="Duration" class="form-label">Duration (weeks)</label>
                    <input asp-for="Duration" class="form-control" type="number" />
                    <span asp-validation-for="Duration" class="text-danger small"></span>
                </div>

                <!-- Capacity -->
                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label">Capacity</label>
                    <input asp-for="Capacity" class="form-control" type="number" />
                    <span asp-validation-for="Capacity" class="text-danger small"></span>
                </div>

                <!-- Supervisor -->
                <div class="mb-4">
                    <label asp-for="SupervisorID" class="form-label">Supervisor</label>
                    <select asp-for="SupervisorID" asp-items="Model.AvailableInstructors" class="form-select">
                        <option value="">Select a supervisor</option>
                    </select>
                    <span asp-validation-for="SupervisorID" class="text-danger small"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn"
                            style="background-color: var(--primary-color); color: white; border-radius: var(--border-radius);">
                        Create
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2"
                       style="border-radius: var(--border-radius);">Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>
