@model ExaminationSystemMVC.DTOs.AdminDTOs.TrackDTOs.CreateTrackDTO

@{
    ViewData["Title"] = "Create Track";
}

<div class="container mt-4">
    <h3>Create New Track</h3>

    <form asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="TrackName" class="form-label">Track Name</label>
            <input asp-for="TrackName" class="form-control" />
            <span asp-validation-for="TrackName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Duration" class="form-label">Duration (weeks)</label>
            <input asp-for="Duration" class="form-control" type="number" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Capacity" class="form-label">Capacity</label>
            <input asp-for="Capacity" class="form-control" type="number" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SupervisorID" class="form-label">Supervisor</label>
            <select asp-for="SupervisorID" asp-items="Model.AvailableInstructors" class="form-select">
                <option value="">Select a supervisor</option>
            </select>
            <span asp-validation-for="SupervisorID" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>